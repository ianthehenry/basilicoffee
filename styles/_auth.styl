.auth
  max-width: 400px
  margin: 0 auto

  input, progress
    width: 100%
  input
    height: line-height * 1.5
    padding: 0 0.4em
    font-size: 110%

  .error
    color: #c00

  button
    width: line-height * 1.5

  .message
    background-color: #fff
    margin-top: 40px
    padding: 1em

    > * + *
      margin-top: 0.5em

    h1
      font-size: 18px
      text-align: center
  a
    padding: 1em
    text-align: center
    display: block

.auth.signup
  button
    width: 100%
    margin-left: auto
    margin-right: auto
    display: block
    height: line-height * 1.5
